{
    "name": "antigravity-pulse",
    "displayName": "Antigravity Pulse",
    "description": "100% local & super lightweight Antigravity quota monitor",
    "version": "1.3.1",
    "publisher": "jdgarcia",
    "engines": {
        "vscode": "^1.90.0"
    },
    "icon": "icon.png",
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "antigravityPulse.refresh",
                "title": "Antigravity Pulse: Refresh"
            }
        ],
        "configuration": {
            "title": "Antigravity Creds",
            "properties": {
                "antigravityPulse.pollingInterval": {
                    "type": "number",
                    "default": 30,
                    "minimum": 30,
                    "description": "Polling interval in seconds (minimum: 30s)"
                }
            }
        }
    },
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "package": "npm run compile && npx @vscode/vsce package --no-dependencies"
    },
    "devDependencies": {
        "@types/vscode": "^1.90.0",
        "@types/node": "^20.0.0",
        "@vscode/vsce": "^3.2.0",
        "typescript": "^5.3.0"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/codavidgarcia/antigravity-pulse"
    }
}